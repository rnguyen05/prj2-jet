<div class="container space-top">
<form class="regForm">
	<h4 class="article-header">User Registration</h4>

	<div class="form-row">
		<div class="form-group col-md-6">
      <label for="inputUsername4">Username</label>
      <input type="text" class="form-control username-form" id="username-input-registration" placeholder="your-email@email.com">
    </div>
		<div class="form-group col-md-6">
      <label for="inputUsername4">Confirm Username</label>
      <input type="text" class="form-control username-form" id="repeat-username-input-registration" placeholder="Confirm Username your-email@emailcom">
    </div>
	</div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" id="email-input-registration" placeholder="Email: your-email@email.com">
    </div>
		<div class="form-group col-md-6">
      <label for="inputEmail4">Confirm Email</label>
      <input type="email" class="form-control" id="repeat-email-input-registration" placeholder="Confirm Email: your-email@email.com">
    </div>
    
  </div>
	<div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputPassword4">Password</label>
      <input type="password" class="form-control" id="password-input-registration" placeholder="Password">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Confirm Password</label>
      <input type="password" class="form-control" id="repeat-password-input-registration" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" id="inputAddress1" placeholder="1234 Main St">
  </div>
  <div class="form-group">
    <label for="inputAddress2">Address 2</label>
    <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input type="text" class="form-control" id="inputCity">
    </div>
    <div class="form-group col-md-4">
